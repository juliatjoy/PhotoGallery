- if @images.present?
  #MyCarousel.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      - @images.each_with_index do |photo, n|
        %li{class: "#{'active' if n == 0}", "data-slide-to" => n, "data-target" => "#MyCarousel"}
    .carousel-inner{:role => "listbox"}
      - @images.each_with_index do |photo, n|
        .carousel-item{class: "#{'active' if n == 0}"}
          = image_tag photo['urls']['regular'], style: "width: 100%; height: 600px !important"
    %a.carousel-control-prev{"data-slide" => "prev", :href => "#MyCarousel", :role => "button"}
      %span.carousel-control-prev-icon{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.carousel-control-next{"data-slide" => "next", :href => "#MyCarousel", :role => "button"}
      %span.carousel-control-next-icon{"aria-hidden" => "true"}
      %span.sr-only Next
- else
  %p An error occured